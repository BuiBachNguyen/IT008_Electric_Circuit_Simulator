<Window x:Class="MoPhongThiNghiemVatLy.AddWindow.CustomizeMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoPhongThiNghiemVatLy.AddWindow"
        mc:Ignorable="d"
        Title="Thông Báo" Height="150" Width="500"
        Icon="Images/IconOfApp.png">
    <Grid>
        <TextBlock x:Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,10,0,0"/>
        <Button Content="OK" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" Click="OKButton_Click" Background="LightGray"/>
    </Grid>
</Window>
